<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:tx="http://www.springframework.org/schema/tx" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd 
                             http://www.springframework.org/schema/tx 
    					http://www.springframework.org/schema/tx/spring-tx-3.2.xsd"
         id="WebApp_ID" 
         version="3.0">

	<filter>  
	    <filter-name>encodingFilter</filter-name>  
	    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>  
	    <init-param>  
	        <param-name>encoding</param-name>  
	        <param-value>utf-8</param-value>  
	    </init-param>  
	</filter>  
	<filter-mapping>  
	    <filter-name>encodingFilter</filter-name>  
	    <url-pattern>/*</url-pattern>  
	</filter-mapping>

<!-- 配置安全入口Filter --> 
	<filter>
	    <filter-name>nbAPISecurityFilter</filter-name>
	    <filter-class>common.helper.nbAPISecurityFilter</filter-class>
	    <!-- 配置无需安全过滤的地址 -->
	    <init-param>    
			<param-name>excludedPages</param-name>    
			<param-value>
				/openAPI/;
			</param-value>    
		</init-param>
	</filter>
	
	<!-- 配置安全入口Filter过滤的地址 --> 
	<filter-mapping>
	    <filter-name>nbAPISecurityFilter</filter-name>
	    <url-pattern>*.api</url-pattern>
	</filter-mapping>
<!-- END：配置安全入口Filter --> 

<!-- 配置安全入口Filter --> 
	<filter>
	    <filter-name>nbHTMLSecurityFilter</filter-name>
	    <filter-class>common.helper.nbHTMLSecurityFilter</filter-class>
	    <!-- 配置无需安全过滤的地址 -->
	    <init-param>    
			<param-name>excludedPages</param-name>    
			<param-value>
				/sp/;
			</param-value>    
		</init-param>
	</filter>
	
	<!-- 配置安全入口Filter过滤的地址 --> 
	<filter-mapping>
	    <filter-name>nbHTMLSecurityFilter</filter-name>
	    <url-pattern>*.html</url-pattern>
	</filter-mapping>
<!-- END：配置安全入口Filter --> 

<!-- 监听spring上下文容器 -->  
    <listener>  
        <listener-class>  
            org.springframework.web.context.ContextLoaderListener  
        </listener-class>  
    </listener>  
    <listener> 
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class> 
	</listener>
      
    <!-- 加载spring的xml配置文件到 spring的上下文容器中 -->  
    <context-param>  
        <param-name>contextConfigLocation</param-name>  
        <param-value>/config/applicationContext.xml</param-value>  
    </context-param> 
    
    <context-param> 
    	<param-name>log4jConfigLocation</param-name> 
    <param-value>/config/log4j.properties</param-value> 

</context-param>
    

<!-- 配置Spring MVC DispatcherServlet -->  
    <servlet>  
        <servlet-name>nbBaseServlet</servlet-name>  
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>  
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                /config/nbBaseServlet-servlet.xml
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>  
    </servlet>  
  
    <!-- 配置DispatcherServlet所需要拦截的 url -->  
    <servlet-mapping>  
        <servlet-name>nbBaseServlet</servlet-name>  
        <url-pattern>*.html</url-pattern>  
    </servlet-mapping>
    <servlet-mapping>  
        <servlet-name>nbBaseServlet</servlet-name>  
        <url-pattern>*.api</url-pattern>  
    </servlet-mapping>

<!-- END:配置Spring MVC DispatcherServlet --> 

  <display-name>nbBase</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>